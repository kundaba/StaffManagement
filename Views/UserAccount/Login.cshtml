@model CDFStaffManagement.Services.UserAccount.LoginViewModel
@{
    Layout = null;
}

    <html lang="en">
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <title>
            Payroll & HR Zambia - Login
        </title>
        <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
        <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
        <link href="~/MDB/css/material-dashboard.minf066.css" rel="stylesheet" />
        <link href="~/MDB/css/mdb.css" rel="stylesheet" />
        <link href="~/font-awesome/css/fontawesome.css" rel="stylesheet" />
        <link href="~/font-awesome/css/all.css" rel="stylesheet" />
        <link href="~/MDB/css/demo.css" rel="stylesheet" />
        <link href="~/MDB/css/style.css" rel="stylesheet" />
        <link href="~/sweetalert/sweetalert.css" rel="stylesheet" />
        <link href="~/MDB/css/css8393.css" rel="stylesheet" />
    </head>

    <body class="off-canvas-sidebar body" style="background-color: #7FB3D5 ">
        <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top text-white">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="navbar-toggler-icon icon-bar"></span>
                    <span class="navbar-toggler-icon icon-bar"></span>
                    <span class="navbar-toggler-icon icon-bar"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item ">
                            <a href="@Url.Action("PasswordReset","UserAccount")" class="nav-link">
                                <i class="material-icons">lock_open</i> Reset Password
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- End Navbar -->
        <div class="wrapper wrapper-full-page">
            <div class="page-header login-page header-filter" filter-color="">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 ml-auto mr-auto">
                            <form class="form" asp-action="Login">
                                <div class="card card-login card-header-info">
                                    <div class="card-header card-header-info text-center">
                                        <h4 class="card-title"> HR & Payroll Zambia - Login</h4>
                                        <div class="social-line">
                                            <i class="material-icons">fingerprint</i>
                                        </div>
                                    </div>
                                    <div class="card-body ">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="material-icons">face</i> Username
                                                </span>
                                            </div>
                                            <input type="text" asp-for="UserName" class="form-control" placeholder="UserName..." required/>
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="material-icons">lock_outline</i>Password
                                                </span>
                                            </div>
                                            <input type="password" asp-for="Password" class="form-control" placeholder="Password..." required/>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="text-center">
                                        <center>
                                            <button type="submit" class="btn btn-info btn-md btn-block btn-round waves-effect text-center col-md-10" style="background-color: #BD9D60; border: none; margin-top: 20px">
                                                <i class="fa fa-unlock"></i>
                                                Sign in
                                            </button>
                                        </center>
                                    </div>
                                    <div>
                                        <center><h4> <label style="text-decoration:dashed" class="text-rose"><b> @TempData["LoginStatus"] </b></label></h4></center>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <footer class="footer">
                    <div class="container">

                        <div class="copyright float-right">
                            &copy;
                            <script>
                                document.write(new Date().getFullYear())
                            </script>, My Payroll <i class="material-icons"></i>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="~/jquery/jquery.js"></script>
        <script src="~/MDB/js/popper.min.js"></script>
        <script src="~/MDB/js/bootstrap-material-design.min.js"></script>
        <script src="~/MDB/js/perfect-scrollbar.jquery.min.js"></script>
        <script src="~/MDB/js/material-dashboard.minf066.js"></script>
        <script src="~/MDB/js/mdb.js"></script>
        <script src="~/MDB/js/moment.min.js"></script>
        <script src="~/MDB/js/bootstrap-datetimepicker.min.js"></script>
        <script src="~/font-awesome/js/fontawesome.js"></script>
        <script src="~/font-awesome/js/all.js"></script>
        <script src="~/jqueryui/jquery-ui.js"></script>
        <script src="~/sweetalert/sweetalert.js"></script>
        <script src="~/MDB/js/arrive.min.js"></script>
        <script src="~/MDB/js/bootstrap-notify.js"></script>
        <script src="~/MDB/js/bootstrap-selectpicker.js"></script>
        <script src="~/MDB/js/bootstrap-tagsinput.js"></script>
        <script src="~/MDB/js/buttons.js"></script>
        <script src="~/MDB/js/chartist.min.js"></script>
        <script src="~/MDB/js/demo.js"></script>
        <script src="~/MDB/js/fullcalendar.min.js"></script>
        <script src="~/MDB/js/jasny-bootstrap.min.js"></script>
        <script src="~/MDB/js/jquery-jvectormap.js"></script>
        <script src="~/MDB/js/jquery.bootstrap-wizard.js"></script>
        <script src="~/MDB/js/jquery.dataTables.min.js"></script>
        <script src="~/MDB/js/jquery.sharrre.js"></script>
        <script src="~/MDB/js/popper.min.js"></script>
        <script src="~/MDB/js/sweetalert2.js"></script>
    </body>
    </html>
