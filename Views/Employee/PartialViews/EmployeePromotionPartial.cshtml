
<!-- employee promotion modal -->

<div class="modal fade" id="promotionAndTransferModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="max-width: 70% !important;">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title" style="margin-bottom: 25px"><u>Transfer/Promotion Form </u></h5>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <i class="material-icons text-danger">clear</i>
                </button>
            </div>
            <div class="modal-body">

                <div class="row col-12">
                    <div class="col-md-6">
                        <div class="row">
                            <p class="col-md-3 col-form-label">
                                Current Position
                                <span class="text-danger">*</span>
                            </p>
                            <div class="col-md-9">
                                <div class="form-group has-default">
                                    <input type="text" class="form-control" id="currentPosition" maxlength="20" placeholder="Enter position code" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <p class="col-md-3 col-form-label">
                                End Date
                                <span class="text-danger">*</span>
                            </p>
                            <div class="col-md-9">
                                <div class="form-group has-default">
                                    <input type="text" class="form-control" id="currentPositionEndDate" maxlength="20" onblur="calculatePromotionStartDate()" placeholder="Enter position end date">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <p class="col-md-3 col-form-label">
                                New Position
                                <span class="text-danger">*</span>
                            </p>
                            <div class="col-md-9 searchDiv">
                                <div class="form-group has-default">
                                    <input type="text" class="form-control positionCode" id="newPosition" placeholder="Enter new position">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <p class="col-md-3 col-form-label">
                                Start Date
                                <span class="text-danger">*</span>
                            </p>
                            <div class="col-md-9">
                                <div class="form-group has-default">
                                    <input type="text" class="form-control " id="newPositionStartDate" placeholder="select start date">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success waves-effect mr-2  btn-sm SubmitBtn" onclick="submitPromotionDetails()" >Submit</button>
                <button type="button" class="btn btn-danger waves-effect mr-2  btn-sm" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

