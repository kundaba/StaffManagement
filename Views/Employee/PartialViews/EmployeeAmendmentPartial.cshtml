
<div class="modal fade" id="employeeAmendmentModal" tabindex="-1">
    <div class="modal-dialog modal-lg" style="max-width: 65% !important;" role="document">
        <div class="modal-content mb-5">
            <div class="modal-header bg-info">
                <h5 class="modal-title" style="margin-bottom: 25px"><u>Personal Details Amendment Form </u><span id="refNo"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="text-danger">&times;</span>
                </button>
                <hr/>
            </div>
            
            <div class="modal-body p-b-0 mb-5">
                <div class="row">
                    <div class="col-md-12">
                        <div id="wizard" id="app-s7">
                            <section>
                                <form class="wizard-form" id="application-form">
                                    <fieldset>
                                        <div class="form-group row">
                                        <div class="col-sm-3 col-lg-4">
                                            <label class="block">EmployeeCode : <b id="employeeCode"></b></label>
                                        </div>
                                        </div>
                                        <div class="fields">
                                            <table class="table fieldsAmendmentTable" width="100%">

                                                <tr class="fieldsTableRow">

                                                    <td>
                                                        <label>
                                                            Field Name
                                                            <span class="text-danger">*</span>
                                                        </label>
                                                        <select class="form-control fieldName"  id="fieldName" data-live-search="true"  >
                                                            <option value="" selected disabled>Select field name</option>
                                                            <option value="FirstName"> First name</option>
                                                            <option value="SecondName"> Second Name</option>
                                                            <option value="LastName"> Last Name</option>
                                                            <option value="MobileNumber"> Mobile No</option>
                                                            <option value="EmailAddress"> Email Address</option>
                                                            <option value="PhysicalAddress"> Physical Address</option>
                                                            <option value="Nationality"> Nationality</option>
                                                            <option value="IDNumber"> ID Number </option>
                                                            <option value="SocialSecurityNumber"> Social Sec. Number</option>
                                                            <option value="TerminationDate"> Termination Date </option>
                                                            <option value="MaritalStatus"> Marital Status </option>
                                                        </select>
                                                    </td>

                                                    <td>
                                                        <label for="currentValue" class="block">
                                                            Current Value
                                                        </label>
                                                        <input id="currentValue" type="text" class=" form-control currentValue" style="text-transform: uppercase" readonly />
                                                    </td>

                                                    <td class="newValueTd">
                                                        <label for="newValue" class="block">
                                                            New Value
                                                            <span class="text-danger">*</span>
                                                        </label>
                                                        <input id="newValue" type="text" class=" form-control newValue"
                                                               placeholder="Enter value"
                                                               maxlength="50" required />
                                                    </td>
                                                    <td>
                                                        <center>Action</center>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>

                                    </fieldset>
                                </form>
                            </section>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer justify-content-lg-end">
                <button type="button"  class="btn btn-sm btn-info addFieldsBtn waves-effect mr-2 "><i class="fa fa-plus-circle"></i>Add Field</button>
                <button type="button"  class="btn btn-sm btn-success submitBtn waves-effect mr-2 " onclick="submitAmendedData()">Submit</button>
                <button type="button" class="btn btn-danger waves-effect mr-3 btn-sm"
                        data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>
